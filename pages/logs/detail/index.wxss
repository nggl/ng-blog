.pool {
	padding: 0 20rpx;
}
.author {
	display: flex;
	align-items: center;
}
.author image {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
}
.author text {
	font-size: 32rpx;
	color: #333;
	margin-left: 20rpx;
}
.prod {
	display: flex;
	flex-direction: column;
	margin: 20rpx 0 0;
	border-top: 2rpx solid #eee;
}
.prod-row {
	border-bottom: 2rpx solid #eee;
	padding: 10rpx 0;
	margin: 10rpx 0;
}
.prod-tt {
	font-size: 28rpx;
	color: #333;
}
.prod-desc {
	color: #666;
	font-size: 24rpx;
}
.prod-ft {
	display: flex;
	justify-content: space-between;
	font-size: 20rpx;
	color: #999;
}
