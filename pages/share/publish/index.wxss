.pool {
	padding: 0 20rpx;
	display: flex;
	flex-direction: column;
}
.pool label {
	font-size: 36rpx;
	color: #333;
	margin-bottom: 10rpx;
}
.pool textarea {
	width: 686rpx;
	padding: 12rpx;
	background-color: #f5f5f5;
	border-radius: 12rpx;
}
.tt textarea {
	min-height: 120rpx;
	height: auto;
}
.desc,
.ct {
	margin-top: 20rpx;
}
.desc textarea {
	min-height: 200rpx;
	height: auto;
}
.ct textarea {
	min-height: 320rpx;
}
.btn {
	padding: 50rpx 0 0;
	display: flex;
	justify-content: space-around;
}
