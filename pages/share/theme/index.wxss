/* pages/share/theme/index.wxss */
.container {
  padding: 20rpx 30rpx;
  display: flex;
}
.container textarea {
  flex: 1;
  box-sizing: border-box;
  border: 1px solid #ececec;
  padding: 10rpx;
}

.tip {
	padding: 10rpx 30rpx;
}
.tip-text {
	font-size: 28rpx;
	color: #9a9a9a;
	line-height: 28rpx;
}
.row {
	border-radius: 10rpx;
	padding: 8rpx 12rpx;
	font-size: 34rpx;
	color: #343434;
	box-shadow: 1rpx 1rpx 2rpx 4rpx #efefef;
	margin-top: 24rpx;
}
.row-info {
	display: flex;
	justify-content: space-between;
	line-height: 36rpx;
	font-size: 24rpx;
	color: #989898;
}

.footer {
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}
.footer button {
  width: 420rpx;
}