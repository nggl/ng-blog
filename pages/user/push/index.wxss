.nav {
	padding: 0 60rpx;
	display: flex;
}
.nav view {
	flex: 1;
	padding: 20rpx 0;
	font-size: 32rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	position: relative;
}
.nav view::after {
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 4rpx;
	background-color: #e50915;
}
.nav .active {
	color: #e50915;
}
.nav .active::after {
	content: "";
}

.row {
	padding: 0 20rpx;
	margin-top: 30rpx;
}
.row-push,
.row-pop {
	border-radius: 12rpx;
	background-color: #f5f5f5;
	padding: 16rpx 16rpx;
	margin-top: 16rpx;
}
.base {
	display: flex;
	flex-direction: column;
}
.base-tt {
	color: #333;
	font-size: 32rpx;
}
.base-date {
	color: #999;
	font-size: 20rpx;
}
.base-ds,
.base-ct {
	color: #444;
	font-size: 24rpx;
	width: 678rpx;
}
.base-ds {
	color: #666;
}
.btn {
	display: flex;
	justify-content: space-between;
	margin: 16rpx 0 0;
	padding: 0 30rpx;
}
.btn button {
	margin: 0;
}
.btn navigator {
	padding: 8rpx 12rpx;
}